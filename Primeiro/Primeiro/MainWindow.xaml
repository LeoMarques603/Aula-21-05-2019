<Window x:Class="Primeiro.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Primeiro"
        mc:Ignorable="d"
        Title="Minha Janela" Height="450" Width="800">
    <StackPanel>
        <TextBlock Text="Nome" Margin="10,10,50,10" />
        <TextBox Text="{Binding Nome}" />
        <TextBlock Text="{Binding Nome}" />
        <TextBlock Text="Você é um robô?"/>
        <CheckBox IsChecked="{Binding IsRobo}" />
        <TextBlock Text="{Binding Data}" />
        <Button Content="Clique Me!" Click="Button_Click"/>




    </StackPanel>
</Window>
